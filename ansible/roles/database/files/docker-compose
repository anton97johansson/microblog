version: "3"
services:
    mysql:
        image: mysql/mysql-server:5.7
        container_name: "microblog-database"
        environment:
            - MYSQL_DATABASE=microblog
            - MYSQL_USER=microblog
            - MYSQL_PASSWORD=1125
            - MYSQL_ROOT_PASSWORD=1125
        restart:
            "always"
        ports:
          - 3306:3306
        volumes:
          - /var/lib/mysql:/var/lib/mysql 